hardstatus alwayslastline
hardstatus string '%{= kg}[ %{G}%H %{g}][ %{=kw}%?%-Lw%?%{r}(%{W}%n*%f%t%?(%u)%?%{r})%{w}%?%+Lw%?%?%= %{g}][%{B}%Y-%m-%d %{W}%c %{g}]'

defscrollback 30000

autodetach on

activity "activity: window ~%"	# Message when activity occurs in a window

startup_message off

screen -t local 0
